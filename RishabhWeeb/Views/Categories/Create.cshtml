@model RishabhWeeb.Models.Category


<form method="post" asp-controller="Categories" asp-action="Create">

    <div class="container-fluid border p-4">
        <fieldset style="text-align:center">
            <legend class="text-primary"><h2>Create Category</h2></legend>
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <hr />
            <div style="text-align: -webkit-center;">
            
            <table >
                <tr>
                    <th><label asp-for="Name"></label></th>
                    <th><input type="text" asp-for="Name" class="form-control" /></th>
                    @* <th><span asp-validation-for="Name" class="text-danger"></span></th> *@
                </tr>
                <tr>
                    <th><label asp-for="DisplayOrder"></label></th>
                    <th><input type="text" asp-for="DisplayOrder" class="form-control" /></th>
