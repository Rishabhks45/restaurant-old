@model List<Category>


<form method="post">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Category Name</h2>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-info" asp-area="" asp-controller="Categories" asp-action="Create"><i class="bi bi-plus-square"></i>&nbsp;Create New Category</a>

            </div>
        </div>
        <br /><br />
        <table class="table table-bordered " style="width:100%">
            <tbody>
                <tr>
                    <th>
                        Category Id
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Orders
                    </th>
                    <th>Manage</th>
                </tr>
            </tbody>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>

                            <a asp-route-Id="@obj.Id" asp-controller="Categories" asp-action="Edit"><i class="bi bi-pencil-square" style="padding-right:30px;padding-left:20px"></i></a>
                            <form asp-action="Delete" asp-controller="Categories" asp-route-id="@obj.Id" class="btn btn-link">
                                <button type="submit" class="btn btn-link" onclick="return confirm(' Are You Want To Delete Role')">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>